{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "ES6",
    "target": "ES2018",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "types": ["unplugin-vue-define-options"]
  },
  "references": [{ "path": "./tsconfig.jest.json" }],
  "include": ["packages", "typings"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
